@import helpers
@import variables

*
	margin 0
	padding 0
	box-sizing border-box
	
body
	background url(../img/bg.jpg) center
	
img
	width 100%
	height auto	
a
	text-decoration none
	
aside
	width 100%
	max-width 30%
	position relative
	+media(1280px)	
		max-width 90%
		margin 0 auto

ul
	font-family 'Roboto', sans-serif
	list-style none

h3
	margin-left 1.5em
	text-transform uppercase
	color $orange
	font-family: 'Roboto', sans-serif
	font-size 36px
	padding-top 30px
	
hr 
	height: 1px
	width: 90%
	margin 0 auto 15px
	background: #000
	
.row
	display flex
	&__between
		justify-content space-between

.col
	@extend .row
	flex-direction column

.wrapper
	width 100%
	max-width 1200px
	margin 0 auto
	
.container
	@extend .wrapper
	padding-top 60px

.main
	@extend .row
	@extend .row__between
	@extend .container
	+media(1280px)
		flex-direction column-reverse

.content
	max-width 65%
	+media(1280px)
		max-width 90%
		width 100%
		margin: 0 auto

.parallax
	width 100%
	position relative	
	&--l-1,
	&--l-2,	
	&--l-3
		position absolute
		+media(640px)
			display none
	&--l-1
		width 65%
		left 20%
		top 20%
	&--l-2
		width 60%
		left 40%
		bottom 30%
	&--l-3
		width 75%
		left 10%
		bottom 0%
		
.gradient
	position absolute
	top 15%
	right 7.5%
	z-index 1
	font-family: "Georgia", sans-serif 
	/*Как мне кажется, ужасный шрифт*/
	font-size 38px
	text-align center
	text-shadow 4px 3px 7px #eee 
	background linear-gradient(90deg, #2989cc, #fff)
	background-size 400% auto
	background-clip text
	text-fill-color: transparent
	-webkit-background-clip: text
	-webkit-text-fill-color: transparent
	animation gradient 3s ease infinite
	+media(640px)
		display none
@keyframes gradient
	0%
		background-position 0% 50%
	50%
		background-position 100% 50%
	100%
		background-position 0% 50%
		
.logo
	position absolute
	top 10%
	left 12%
	z-index 1
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	align-items center
	justify-content center
	+media(640px)
		left 0
		right 0
		margin 0 auto
	p
		font-family: 'Roboto', sans-serif
		font-size: 28px
		letter-spacing: 0.6px
		text-transform uppercase
		
h1
	font-family: 'Roboto', sans-serif
	font-size: 80px
	color: #fcff24
	font-weight 100
	text-shadow: 4px 7px 8px rgba(0, 0, 0, 0.75)
	letter-spacing: 1.8px
	
.nav
	@extend .wrapper
	font-family: 'Pacifico', cursive
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content center
	align-items center
	+media(1280px)
		flex-direction column
		display none
	//фикс для мозиллы
	a
		color: $blue
		&:first-child
			margin-left 0
			+media(1280px)
				margin auto
		&:last-child
			margin-right 0
			+media(1280px)
				margin auto
	&--item
		margin 0 auto
		font-size 21px
		position relative
		transition: animation
		&::after
			content ''
			position absolute
			bottom 5px
			left 0
			width 100%
			height 1px
			display block
			background-image: url(../img/dash.png)
			background-color $blue
			transition: animation
		&:hover
			color $orange
			&::after
				background-color $orange
.ribbon
	font-family: 'Arial'
	background: linear-gradient(to top, #0678b3 0%, #09abff 100%)
	max-width: 10em
	padding: 5px 25px
	border-radius: 20px 20px 20px 0px
	margin-bottom 50px
	position relative
	color #fff
	letter-spacing 2px
	font-size 22px
	&::before
		content ''
		display block
		position absolute
		left 0
		bottom -25px
		width 20%
		height 25px
		background: linear-gradient(to bottom, #0678b3 0%, #09abff 100%)
		border-radius: 0 20px 20px 20px
	&::after
		content ''
		position: absolute
		bottom: -25px
		left: 1.5%
		background: #fff
		display: block
		width: 80%
		height: 25px
		border-radius: 25px 20px 20px 13px
		
.countries
	position relative
	z-index 1
	margin-top: -40px
	padding-left: 20px
	font-size 22px
	font-family: 'Times New Roman'
	+media(1280px)
		display flex
		flex-wrap: wrap
	&--item
		line-height 1.5
		margin-right 2em
		+media(1280px)
			line-height 2
	&--detail
		/*Специально не стал делать белвй фон - ужасно выглядит*/
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		+media(1280px)
			justify-content space-around 
		&--item
			margin-bottom 2em
			max-width 32%
			text-align center
			+media(1280px) 
				max-width 280px
				margin 1em
			&:hover
				.countries--detail--img
					box-shadow 0 0 35px -3px $orange
					border 2px solid $orange
			.country
				text-align center
				color $orange
				font-family: 'Roboto', sans-serif
				letter-spacing -.5px
				font-size 20px
				padding 5px
				position relative
				cursor pointer
				&::before
					content ''
					display block
					position: absolute 
					border: 2px solid transparent
					border-right: 45px solid $orange
					left: -50px
					top: 15px
				&::after
					content ''
					display block
					position: absolute 
					border: 2px solid transparent
					border-right: 45px solid $orange
					right: -50px
					top: 15px
					transform rotate(180deg)
		&--img
			border 2px solid #0094d4
			padding 3px
			transition animation
.news,
.articles
	+media(1280px)
		margin-right 1em
		width 100%
	+media(640px)
		margin-right 0
	&--list
		border-left 2px solid $lightblue
		padding-left 5px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		justify-content flex-start
		align-self flex-start
	&--item
		font-size 18px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		align-items center
		justify-content flex-start
		padding-bottom 20px
		+media(1280px)
			display none
			&:first-child
				display block
		&:last-child
			padding-bottom 0
		&__more
			color $blue
			border-bottom 1px solid $blue
			transition animation
			align-self flex-end
			&:hover
				color $orange
				border-bottom 1px solid $orange
	&--img
		width auto
		height auto
		+media(1280px)
			display none

.articles
	padding-top 65px
	+media(1280px)
		padding-top 0
	.row
		padding-bottom 10px
		
.all-news
	align-self flex-end
	margin-right 2em
	margin-top 1em
	font-size 22px
	color $blue
	font-weight 600
	text-decoration underline
	
.action
	font-family: "Roboto", sans-serif
	font-size 22px
	font-weight 400
	color $orange
	padding-bottom 30px
	
.static
	font-family: "Roboto", sans-serif
	font-size 18px
	padding-bottom 1em
	font-weight 300

.fixed
	width 100%
	background #ffffff
	position fixed
	left 0
	right 0
	top 0
	padding 10px 0 5px
	z-index 2

footer
	@extend .wrapper
	padding-top 60px
	padding-bottom 20px

.footer
	@extend .wrapper
	@extend .row
	position relative
	justify-content space-between
	max-width 80%
	font-family 'Roboto', sans-serif
	font-size: 14px
	flex-wrap: wrap
	+media(1280px)
		max-width 90%
	a
		line-height 2
		color $blue
.tel
	color $blue
	font-size: 21px
.mail
	color #959898

.address
	+media(1280px)
		padding-right 1em

.copy
	+media(1280px)
		width 100%
		padding-top 1em
		display flex
		flex-direction row
		justify-content space-around
		flex-wrap wrap
		p,
		a
			line-height 2
			margin 0 .5em
		

.sitename
	margin-top auto
	+media(1280px)
		margin-top 0

.count
	width 88px
	height 31px
	+media(640px)
		display none

.news-art
	+media(1280px)
		flex-direction row
		flex-wrap: wrap
		width 100%
		justify-content space-between